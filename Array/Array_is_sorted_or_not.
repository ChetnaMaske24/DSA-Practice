# Check if an array is sorted or not.
def is_sorted(arr):
    for i in range(len(arr) - 1):
        if arr[i] > arr[i + 1]:
            return False
    return True


# Example
arr1 = [1, 2, 3, 4, 5]
arr2 = [3, 5, 2, 8]

print("Array 1 sorted?", is_sorted(arr1))
print("Array 2 sorted?", is_sorted(arr2))
